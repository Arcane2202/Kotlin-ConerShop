<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/settings"
        android:layout_width="500dp"
        android:layout_height="55dp"
        android:background="@color/Background"
        android:gravity="center"
        android:text="Settings"
        android:textColor="#90A295"
        android:textSize="30dp"
        android:textStyle="bold"
        />


    <ImageView
        android:id="@+id/edit"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/settings"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_edit2"
        />


    <TextView
        android:id="@+id/title_changeLan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:layout_below="@+id/settings"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Change Language"
        android:textColor="@color/black"
        android:textSize="22dp"

        android:layout_toRightOf="@id/edit"
        />


    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/settings"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_toRightOf="@+id/title_changeLan"
        />




    <ImageView
        android:id="@+id/pass"
        android:layout_below="@id/edit"
        android:layout_marginLeft="10dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_baseline_lock_24" />

    <TextView
        android:id="@+id/title_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:layout_below="@id/title_changeLan"
        android:layout_marginLeft="10dp"
        android:text="Change Password:"
        android:textColor="@color/black"
        android:textSize="22dp"

        android:layout_toRightOf="@id/pass" />


    <ImageView
        android:id="@+id/notification"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/pass"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_baseline_notifications" />


    <TextView
        android:id="@+id/title_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:layout_below="@+id/pass"
        android:layout_marginLeft="10dp"
        android:text="Notification settings"
        android:textColor="@color/black"
        android:textSize="22dp"

        android:layout_toRightOf="@id/notification"
        />


    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/pass"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_toRightOf="@+id/title_notification"

        />



    <ImageView
        android:id="@+id/terms"
        android:layout_below="@id/notification"
        android:layout_marginLeft="10dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_baseline_menu_book" />

    <TextView
        android:id="@+id/title_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:layout_below="@id/title_notification"
        android:layout_marginLeft="10dp"
        android:text="Terms and Conditions:"
        android:textColor="@color/black"
        android:textSize="22dp"

        android:layout_toRightOf="@id/pass" />


    <ImageView
        android:id="@+id/delAcc"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/terms"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_baseline_account_circle" />


    <TextView
        android:id="@+id/title_delAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:layout_below="@+id/terms"
        android:layout_marginLeft="10dp"
        android:text="Delete Account"
        android:textColor="@color/black"
        android:textSize="22dp"

        android:layout_toRightOf="@id/notification"
        />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/terms"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/title_delAcc"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"

        />





</RelativeLayout>








