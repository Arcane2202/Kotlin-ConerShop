<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/settings"
        android:layout_width="500dp"
        android:layout_height="55dp"
        android:background="@color/Background"
        android:gravity="center"
        android:text="Settings"
        android:textColor="#90A295"
        android:textSize="30dp"
        android:textStyle="bold"
        />


    <ImageView
        android:id="@+id/pass"
        android:layout_below="@id/settings"
        android:layout_marginLeft="10dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_baseline_lock_24" />

    <TextView
        android:id="@+id/title_oldpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:layout_below="@id/settings"
        android:layout_marginLeft="10dp"
        android:text="Change Password"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:layout_toRightOf="@id/pass" />




    <ImageView
        android:id="@+id/terms"
        android:layout_below="@id/title_oldpass"
        android:layout_marginLeft="10dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_baseline_menu_book" />

    <TextView
        android:id="@+id/title_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:layout_below="@id/title_oldpass"
        android:layout_marginLeft="10dp"
        android:text="Terms and Conditions"
        android:textColor="@color/black"
        android:textSize="22dp"

        android:layout_toRightOf="@id/pass" />


    <ImageView
        android:id="@+id/delAcc"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/terms"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_baseline_account_circle" />


    <TextView
        android:id="@+id/title_delAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:layout_below="@+id/terms"
        android:layout_marginLeft="10dp"
        android:text="Delete Account"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:layout_toRightOf="@id/delAcc" />

</RelativeLayout>