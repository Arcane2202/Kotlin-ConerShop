<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/Promp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/currentPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Promp1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Current Password"/>
        <EditText
            android:id="@+id/newPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/currentPass"
            android:hint="New Password"/>
        <EditText
            android:id="@+id/confirmNewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newPass"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Confirm New Password"/>

        <Button
            android:id="@+id/cancelEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:layout_below="@id/confirmNewPass"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:text="Cancel"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/confirmEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/confirmNewPass"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/black"
            android:text="Confirm"
            android:textSize="20dp" />

    </RelativeLayout>

</RelativeLayout>