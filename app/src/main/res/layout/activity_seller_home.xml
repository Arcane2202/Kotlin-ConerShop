<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home">



    <ImageView
        android:id="@+id/history"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_baseline_history" />


    <ImageView

        android:id="@+id/notiClick"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_notifications" />

    <TextView
        android:id="@+id/title"
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="?actionBarSize"
        android:layout_marginBottom="20dp"
        android:paddingTop="10dp"
        android:text="Seller Home"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp" />


    <TextView
        android:id="@+id/orderlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/title"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="-45dp"
        android:paddingTop="10dp"
        android:text="Order List : "

        android:textColor="@color/black"
        android:textSize="25dp" />

    <LinearLayout
        android:id = "@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_alignBottom="@id/orderlist"
        android:layout_marginBottom="-511dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardGroceries"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#D5E1FF"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp">

            <Button
                android:id="@+id/PendingPackaging"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background=""
                android:paddingVertical="10dp"
                android:text="Pending Packaging"
                android:textColor="@color/black"
                android:textSize="20dp"

                />

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp">

        </Space>

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardGroceries"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#D5E1FF"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp">

            <Button
                android:id="@+id/PendingPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background=""
                android:paddingVertical="10dp"
                android:text="Pending Payment"
                android:textColor="@color/black"
                android:textSize="20dp"

                />

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp">

        </Space>

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardGroceries"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#D5E1FF"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp">

            <Button
                android:id="@+id/readyToDispatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background=""
                android:paddingVertical="10dp"
                android:text="READY TO DISPATCH"
                android:textColor="@color/black"
                android:textSize="20dp"

                />

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp">

        </Space>

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardGroceries"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#D5E1FF"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp">

            <Button
                android:id="@+id/addEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background=""
                android:paddingVertical="10dp"
                android:text="Edit/Add Stock"
                android:textColor="@color/black"
                android:textSize="20dp"

                />

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp">

        </Space>

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardGroceries"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#D5E1FF"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp">

            <Button
                android:id="@+id/stockOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background=""
                android:paddingVertical="10dp"
                android:text="Stock Out"
                android:textColor="@color/black"
                android:textSize="20dp"

                />

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp">

        </Space>

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardGroceries"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#D5E1FF"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp">

            <Button
                android:id="@+id/statistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background=""
                android:paddingVertical="10dp"
                android:text="Statistics"
                android:textColor="@color/black"
                android:textSize="20dp"

                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button

        android:id="@+id/ocrClick"
        android:layout_width="65dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/custom_button"
        android:text="@string/ocr"
        android:textColor="@color/white" />



</RelativeLayout>
