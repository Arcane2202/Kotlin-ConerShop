<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/Background"
    app:cardElevation="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    >

        <RelativeLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sage" />

            <TextView
                android:id="@+id/ItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_toRightOf="@id/itemImage"
                android:layout_marginTop="18dp"
                android:layout_marginRight="20dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

            <ImageView
                android:id="@+id/deleteItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:layout_alignParentEnd="true"
                />


            <RelativeLayout
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:background="@color/Background">


                <ImageView
                    android:id="@+id/itemAddButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_centerInParent="true"
                    android:background="#626665"
                    android:src="@drawable/ic_baseline_adder" />

                <TextView
                    android:id="@+id/Quantity"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@id/itemAddButton"
                    android:background="@color/white"
                    android:text="100"
                    android:textAlignment="center"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/itemRedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@id/Quantity"
                    android:background="#626665"
                    android:src="@drawable/ic_baseline_reduce" />
            </RelativeLayout>

            <TextView
                android:id="@+id/UnitPrice"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ItemName"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/itemImage"
                android:text="U.Price"
                android:visibility="gone"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/TotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/UnitPrice"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/itemImage"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:text="Total Price"
                android:textSize="18dp" />
        </RelativeLayout>

</com.google.android.material.card.MaterialCardView>


























